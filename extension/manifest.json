{
  "manifest_version": 3,
  "name": "AccessibilityAI - Universal Web Accessibility",
  "version": "1.0",
  "description": "AI-powered accessibility modes for any website - Dyslexia, ADHD, Low Vision support",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AccessibilityAI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }
}